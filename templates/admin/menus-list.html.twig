{% extends 'base-admin.html.twig' %}

{% block body %}
<h1>Tous les menus ADMIN</h1>

<table class="table table-dark table-striped">
    <table class="table">

        <thead>
            <tr>
                <th>#ID</th>
                <th>Nom</th>
                <th>Catégorie</th>
                <th>Quantité</th>
                <th>Prix</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% dump(menus)%}
            {% for menu in menus %}

            <tr>
                <th>{{ menu.id }}</th>
                <td>{{ menu.name }}</td>
                <td>{{ menu.categories.name }}</td>
                <td>{{ menu.quantite }}</td>
                <td>{{ menu.price}}</td>
                <td><a href="{{ path('remove_menus', {id:menu.id}) }}"><i class='bx bx-trash'></i></a>
                    <a href="{{ path('edit_menus', {'id': menu.id, 'name': menu.name}) }}"><i
                            class='bx bxs-edit-alt'></i></a>
                    <a href="{{path('add_menus') }}"><i class='bx bxs-plus-circle'></i></a>
                    <a href="{{ path('menus_show', {'id' : menu.id}) }}"><i class='bx bxs-show'></i></a>
                </td>

            </tr>
            {% endfor %}


        </tbody>
    </table>
</table>
{% endblock %}